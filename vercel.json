{
  "version": 2,
  "builds": [
    {
      "src": "dist/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    },
    {
      "src": "dist/public/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/js/(.*)",
      "dest": "/dist/public/js/$1"
    },
    {
      "src": "/css/(.*)",
      "dest": "/dist/public/css/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/dist/public/images/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/index.js"
    }
  ]
}
